{
    "version": 2,
    "builds": [
        {
            "src": "server/src/app.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/src/app.js"
        },
        {
            "src": "/health",
            "dest": "server/src/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "server/src/app.js"
        }
    ],
    "buildCommand": "npm install --prefix server && npm install --prefix client && npm run build --prefix frontend"
}
